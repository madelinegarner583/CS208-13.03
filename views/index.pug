extends layout

block content
  h1= title
  p Welcome to #{title}
  ol
  each val in todos
    li
      span= val.task + ' - '
      if val.completed > 0
        span Completed
      else
        span Not Completed
      //edit button
      form(method='POST' action='/edit')
        input(type='hidden', name='id', value=val.id)
        input(type='text', name='task', placeholder='Edit task description', required)
        button(type='submit') Edit
      //complete button
      form(method='POST' action='/complete')
        input(type='hidden', name='id', value=val.id)
        button(type='submit') Mark as completed
      //delete button
      form(method='POST' action='/delete')
        input(type='hidden', name='id', value=val.id)
        button(type='submit') Delete

  hr
  h2 Add a new task
  form(method='POST' action='/create')
    label(for='task') Task:
    input(type='text', name='task', placeholder='Task description', id='task', required)
    button(type='submit') Create Task
